@model IEnumerable<mvc2.Models.Makale>
@{ 
    Layout = null;
}
<h4>En çok Okunanlar</h4>
<style>
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    label {
        background: #34495E;
        width: 100%;
        display: block;
        border-bottom: 1px solid #2C3E50;
        color: #fff;
        text-transform: capitalize;
        font-weight: 300;
        font-size: 10px;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.7s ease;
        position: relative;
        margin-bottom: 5px;
        padding: 5px 5px 5px 20px;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }
    label h2{
        font-size:10px;
        text-align:left;
    }

        /*label h2 span {
            display: block;
            font-size: 7px;
            text-transform: capitalize;
            font-weight: normal;
            color: #bdc3c7;
        }*/

        label:before {
            width: 8px;
            height: 8px;
            border: 1px solid #416282;
            display: block;
            position: absolute;
            border-radius: 100%;
            left: 20px;
            top: 30%;
            transition: border 0.7s ease;
            z-index: 9999;
        }
</style>
<div class="row">
    <div class="col-lg-12">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <label>
                        <h2>
                            <a style="font-size:20px;" href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik </a>
                        </h2>
                    </label>

                </li>

            }
        </ul>
    </div>

</div>
