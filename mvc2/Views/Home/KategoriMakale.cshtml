@using GridMvc.Html
@model IEnumerable<mvc2.Models.Makale>

@{
    ViewBag.Title = "KategoriMakale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
<style>
    body {
        background-image: linear-gradient(to right bottom, rgba(158, 158, 158,0.8), rgba(120, 144, 156,0.8)), url("../../Content/ss2.jpg");
        z-index:-1;
    }
</style>
<h2> Paylaşımlar </h2>


@Html.Grid(Model).Columns(columns =>
                        {
                            columns.Add(m => m.Kategori.KategoriAdi).Titled("Kategori Adı").SetWidth(110).Sortable(true).Filterable(true);
                            columns.Add(m => m.Baslik).Sortable(true).Filterable(true).Sanitized(false).Encoded(false).RenderValueAs(m => Html.ActionLink(m.Baslik,
     "MakaleDetay", "Home", new { id = m.MakaleId }, null).ToHtmlString());
                            columns.Add(m => m.Tarih).Sortable(true).Filterable(true);
                            columns.Add(m => m.Okunma).Sortable(true).Filterable(true);

                        }).WithPaging(3)



















